@model IEnumerable<DoAnCoSo.Models.GioHang>

@{ ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutGH.cshtml"; }

@*<h2 class=""> GIỎ HÀNG <i class="fa fa-shopping-cart"></i></h2>*@
<br />

@* -hover table-bordered divGioHang *@
<table class="table">
    <tr>
        <th> Tên sản phẩm</th>

        <th> Hình ảnh</th>

        <th> Đơn giá</th>

        <th> Số lượng</th>

        <th> Thành tiền</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@Html.DisplayFor(modelItem => item.sTen)</td>
            <td><img src="@item.sHinhanh" width="180" /></td>
            @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @iMa = item.iMa }))
            {
                <td>@String.Format("{0:0,0}", item.dDongia) VND</td>
                <td>
                    @Html.DisplayFor(modelItem => item.iSoluong)
                </td>
                <td> @Html.DisplayFor(modelItem => item.ThanhTien)</td>
                <td class="text-decoration-none btn btn-warning text-black">
                    @Html.ActionLink("Xóa", "XoaGioHang", new { @iMa = item.iMa })

                </td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2"></td>
        <td colspan="2"> Số lượng sản phẩm: @ViewBag.Tongsoluong</td>
        <td colspan="4"> Tổng tiền : @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
    </tr>
    @*<tr style="font-weight:bold; text-align:right; color:blue">
            <td colspan="5">
                @Html.ActionLink("Xóa giỏ hàng", "XoaTatCaGioHang")
            </td>
        </tr>*@
    <tr style="font-weight:bold; text-align:right; color:yellow">
        <td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "GioHang", new { @class = "" }))
            {

                <input type="submit" value="Đặt hàng" class="btn-danger" />}
        </td>
    </tr>
</table>

